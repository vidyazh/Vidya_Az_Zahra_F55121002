<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E3"
    tools:context=".NydiaActivity">

    <ImageView
        android:id="@+id/img_nydia"
        android:layout_width="1420px"
        android:layout_height="1420px"
        android:src="@drawable/about_nydia"
        android:layout_margin="90px"></ImageView>

    <TextView
        android:id="@+id/name_nydia"
        android:layout_below="@id/img_nydia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nydia Eldiana"
        android:fontFamily="@font/poppins_extra_bold"
        android:textColor="#E37B58"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="130px"></TextView>

    <ScrollView
        android:layout_below="@id/name_nydia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="40px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="#000000"
            android:textSize="80px"
            android:text="@string/abt_nydia"></TextView>
    </ScrollView>

</RelativeLayout>